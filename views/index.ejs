<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>

            <div class="found content">
                <h2>
                    <% if(blogs.length>0){ %>
                        <% blogs.forEach(blog=> {%>

                            <h3 class="title">
                                <%=blog.title %>
                            </h3>
                            <%=blog.snippet %>
                                <p class="snippet"></p>
                                <%})%>
                                    <% } else { %>
                                        <p>No posts yet!</p>
                                        <%}%>
                </h2>
            </div>
    </body>

    <%- include('./partials/footer.ejs') %>

</html>